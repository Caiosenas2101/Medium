{
  "name": "medium-api",
  "version": "1.0.0",
  "description": "Green Amigo Medium Challenge - Backend API",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/services",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "migrate": "npx sequelize db:migrate",
    "migrate:undo": "npx sequelize db:migrate:undo",
    "migrate:undo:all": "npx sequelize db:migrate:undo:all",
    "seed": "npx sequelize db:seed:all",
    "seed:undo": "npx sequelize db:seed:undo:all",
    "db:create": "npx sequelize db:create",
    "db:drop": "npx sequelize db:drop",
    "db:reset": "npm run db:drop && npm run db:create && npm run migrate && npm run seed",
    "db:test:create": "NODE_ENV=test npx sequelize db:create",
    "db:test:drop": "NODE_ENV=test npx sequelize db:drop",
    "db:test:migrate": "NODE_ENV=test npx sequelize db:migrate",
    "db:test:seed": "NODE_ENV=test npx sequelize db:seed:all",
    "db:test:reset": "NODE_ENV=test npx sequelize db:drop && NODE_ENV=test npx sequelize db:create && NODE_ENV=test npx sequelize db:migrate && NODE_ENV=test npx sequelize db:seed:all",
    "setup": "npm install && npm run db:create && npm run migrate && npm run seed",
    "setup:test": "npm install && npm run db:test:create && npm run db:test:migrate && npm run db:test:seed",
    "clean": "npm run db:drop && npm run db:create && npm run migrate",
    "clean:test": "npm run db:test:drop && npm run db:test:create && npm run db:test:migrate",
    "precommit": "npm run lint && npm run format:check && npm test",
    "prepush": "npm run lint && npm run format:check && npm run test:ci"
  },
  "keywords": [
    "nodejs",
    "express",
    "sequelize",
    "postgresql",
    "jwt",
    "api"
  ],
  "author": "Green Amigo",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "yup": "^1.4.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
